---
import Main from "../layouts/Main.astro";
import Cards from "../components/Cards.astro";

const profilePicture = 'https://pbs.twimg.com/profile_images/1223457062035738624/hEjZnP2V_400x400.jpg';

//this will render in server (terminal)
console.log("Hello world!")

// this will get all files in pages/blogs folder
const blogs = await Astro.glob<{title: string; poster: string; subtitle: string;}>("../pages/blogs/*.md")
---

<Main title="Rasyid Annas">
	<div class="profile">
		<img alt="Rasyid annas's website" width="100px" height="100px" class="profile__picture" src={profilePicture} />
		
		<div class="profile__details">
			<h1>Rasyid Annas</h1>
			<h2>VP of Enginerring at Google</h2>
			<p>
				Helping developers be excellent and succed at building scalable products.
			</p>
		</div>
  </div>

  <Cards cards={[
    {
      title: "Here are my guiding philoshopies for life",
      gradientFrom: "#818cf8",
      gradientTo: "#d8b4fe",
      to: "/philosophies"
    },
    {
      title: "A summary of my work history",
      gradientFrom: "#fde68a",
      gradientTo: "#fca5a5",
      to: "/work-summary"
    },
    {
      title: "What I do beyond technology",
      gradientFrom: "#6ee7b7",
      gradientTo: "#9333ea",
      to: "/beyond-tech"
    }
  ]} />

  <div class="featured-blogs">
    <h3 class="featured-blogs__title">Featured Blogs</h3>
    <p class="featured-blogs__description">Opinion pieces that will change everything you knwo about web development.</p>
  </div>

  <ol class="blogs">
    {
    blogs.map((blog) => (
      <li class="blogs__list">
      <a class="blog__link" href={blog.url}>{blog.frontmatter.title}</a>
    </li>
      ))
    }
  </ol>
</Main>

<style>
	.profile {
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0;
	}

	.profile__details {
		flex: 1 0 300px;
	}

	.profile__details > h1 {
		margin: 0;
	}

	.profile__picture {
		border-radius: 50%;
		margin: 0 2rem 1rem 0;
  }

  .featured-blogs {
    margin: 0;
    padding: 3rem 0 0 0;
  }

  .featured-blogs__title {
    font-size: 2rem;
    color: var(--grey-900);
  }

  .featured-blogs__description {
    margin-top: -1.2rem;
  }

  .blogs {
    font-size: 1rem;
    font-weight: 500;
  }

  .blogs__list {
    border-bottom: 1px solid;
    border-color: var(--grey-200);
  }

  .blog__link {
    opacity: 1;
    height: 100%;
    display: block;
    padding: 1rem 0;
    color:var(--grey-200);
    text-decoration: none;
    transition: opacity 0.2s ease-in-out;
  }

  .blog__link:hover {
    opacity: 0.7;
  }
</style>

<script>
//this will render in browser
  console.log("Hello world!")
</script>
